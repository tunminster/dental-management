# Environment variables template for Dental Management Dashboard
# Copy this to .env and these will be replaced by Azure DevOps pipeline tokens

# API Configuration
VITE_API_BASE_URL=https://api-demo.bytheapp.com
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# Application Configuration
VITE_APP_NAME=Dental Management Dashboard
VITE_APP_VERSION=#{Build.BuildNumber}#
VITE_ENVIRONMENT=#{env-name}#
VITE_DEBUG=false
VITE_LOG_LEVEL=info

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false

# Domain Configuration
VITE_DOMAIN=#{host-url}#
VITE_APP_URL=https://#{host-url}#

# Build Configuration
SKIP_PREFLIGHT_CHECK=#{SKIP_PREFLIGHT_CHECK}#
